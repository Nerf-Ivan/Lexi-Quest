{
  "name": "lexi-quest",
  "version": "2.0.0",
  "description": "A professional dictionary application for vocabulary expansion",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd lexi-quest-backend && npm run dev",
    "dev:frontend": "cd lexi-quest-frontend && npm start",
    "install:all": "npm run install:backend && npm run install:frontend",
    "install:backend": "cd lexi-quest-backend && npm install",
    "install:frontend": "cd lexi-quest-frontend && npm install",
    "build": "cd lexi-quest-frontend && npm run build",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd lexi-quest-backend && npm test",
    "test:frontend": "cd lexi-quest-frontend && npm test"
  },
  "keywords": [
    "dictionary",
    "vocabulary",
    "education",
    "react",
    "nodejs",
    "mongodb",
    "express"
  ],
  "author": "LexiQuest Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/lexi-quest.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/lexi-quest/issues"
  },
  "homepage": "https://github.com/yourusername/lexi-quest#readme"
}